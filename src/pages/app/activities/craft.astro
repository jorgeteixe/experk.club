---
import { Image } from 'astro:assets'
import Layout from '../../../layouts/Layout.astro'

import likeImg from '../../../assets/like.png'
import dislikeImg from '../../../assets/dislike.png'
---

<Layout title="ExPerk.club | Preference matcher">
  <div class="h-screen bg-[#272727] p-4">
    <div
      class="w-[500px] border-[10px] bg-[#aea199] border-white rounded-md mx-auto h-full flex flex-col"
    >
      <div
        class="h-2/3 bg-[url('https://cdn.pixabay.com/photo/2021/10/19/09/04/painting-6722956_1280.jpg')] bg-center"
      >
      </div>
      <div class="relative">
        <p
          class="font-['Poetsen One'] text-4xl font-bold text-center uppercase absolute -top-5 left-[166px]"
        >
          Crafts
        </p>
      </div>
      <p
        class="font-['Ubuntu Sans Mono'] text-center font-regular text-xl px-8 mt-10"
      >
        Painting on canvas or dishes, sewing, pottery, scrapbook making.
      </p>
      <div class="flex justify-around mt-10">
        <a
          href="/app/activities/tourism"
          class="bg-white rounded-full px-10 py-2"
        >
          <Image src={likeImg} alt="Like" class="w-16" />
        </a>
        <a
          href="/app/activities/tourism"
          class="bg-white rounded-full px-10 py-2"
        >
          <Image src={dislikeImg} alt="Dislike" class="w-16" />
        </a>
      </div>
    </div>
  </div>
</Layout>
